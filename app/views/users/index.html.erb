<div class="container px-5 px-sm-0">
  <div class="row" >
    <div class="col-md-3">
      <%= render 'books/list', book: @book,user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table">
        <tbody>
          <tr>
            <th>image</th>
            <th>name</th>
            <th>    </th>
          </tr>
          <tr>
             <% @users.each do |user| %>
            <td>
              <span><%= image_tag user.get_profile_image(100,100) %></span>
            </td>
            <td>
              <span><%= user.name %></span>
            </td>
            <td>
              <span><%= link_to "Show", user_path(user.id) %></span>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

