<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model: @user, url: update_user_path(@user.id), method: :patch do |f| %>
      <label for="inputName">Name</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>
      <label for="inputImage">ProfileImage</label>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      <label for="inputIntroduction">Introduction</label>
      <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"intoroduction"%>
      <%= f.submit "Update User" %>
    <% end %>

     <div id="error_explanation"><br>
       <% if @user.errors.any? %>
       <%= @user.errors.count %> errors prohibited this book from being saved:
       <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
       <% end %>
</div>